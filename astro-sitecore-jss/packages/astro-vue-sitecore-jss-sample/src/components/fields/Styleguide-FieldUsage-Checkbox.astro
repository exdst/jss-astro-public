---
import StyleguideSpecimen from '../styleguide/Styleguide-Specimen.astro';
import jss from '@sitecore-jss/sitecore-jss/layout';
const { getFieldValue } = jss;

export interface Props  {
  route: any;
}

const {fields} = Astro.props.route
---

<!--
 Demonstrates usage of a Checkbox (boolean) content field within JSS.
-->
<StyleguideSpecimen route={Astro.props.route} e2eId="styleguide-fieldusage-checkbox">
  <!-- Checkbox fields do not have the ability to be inline edited, so they are directly accessed via their value: -->
  <ul>
    <!--
        The getFieldValue helper allows safely extracting a field value that could be undefined,
        without needing to check that props.fields or props.fields.checkbox are traversable,
        and allowing the specification of an optional default value (default is undefined if unspecified).
      -->
      { fields && fields.checkbox && fields.checkbox.value && <li><code>checkbox</code> is true</li> }
      { !fields || !fields.checkbox || !fields.checkbox.value && <li><code>checkbox</code> is false</li> }
      { getFieldValue(fields, 'checkbox2', false) && <li><code>checkbox2</code> is true</li>}
      { !getFieldValue(fields, 'checkbox2', false) && <li><code>checkbox2</code> is false</li> }
  </ul>
</StyleguideSpecimen>