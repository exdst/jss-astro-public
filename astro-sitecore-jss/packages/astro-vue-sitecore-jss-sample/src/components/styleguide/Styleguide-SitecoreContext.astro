---
import { SitecoreContextMap } from '@astro-sitecore-jss/astro-sitecore-jss';
import StyleguideSpecimen from './Styleguide-Specimen.astro';

export interface Props  {
  route: any
}

const sitecoreContext = SitecoreContextMap.get()['scContext'];
---

<StyleguideSpecimen route={Astro.props.route} e2eId="styleguide-sitecore-context">
    <p>The current Sitecore Context is...</p>
    <pre style={{ maxHeight: '400px', overflow: 'scroll' }}>{JSON.stringify(sitecoreContext, null, 2)}</pre>
</StyleguideSpecimen>